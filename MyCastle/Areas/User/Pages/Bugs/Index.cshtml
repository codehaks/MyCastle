@page
@model MyCastle.Areas.User.Pages.Bugs.IndexModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Home";var i = 1;
}

<h2>My Bugs</h2>
@if (TempData["message"] != null)
{
    <div class="alert alert-info" role="alert">@TempData["message"]</div>
}

<a asp-page="create" class="btn btn-success my-3">Create new</a>

<table class="table table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Desc</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bug in Model.Bugs)
        {
            <tr>
                <td>@i</td>
                <td>@bug.Name</td>
                <td>@bug.Summary</td>
                <td>
                    <a asp-page="/bugs/details" asp-area="user" asp-route-id="@bug.Id" class="btn btn-default">Details</a>
                    <a asp-page="/bugs/delete" asp-area="user" asp-route-id="@bug.Id" class="btn btn-danger">Delete</a>
                    <a asp-page="/bugs/edit" asp-area="user" asp-route-id="@bug.Id" class="btn btn-primary">Edit</a>
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>

